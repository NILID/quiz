.row
  .col.col-12
    - if policy(@user).get_more_info?
      .float-right.text-muted
        = t("users.roles.#{@user.role}")
    %h1= @user.login

  .col.col-12
    %table.table
      %thead
        %tr
          %th= t('titles.date')
          %th= Theme.model_name.human.capitalize
          %th= t('rounds.current_wrong')
          %th= Round.human_attribute_name(:finished)
          %th
      %tbody
        = render @rounds