.row
  .col.col-12
    %table.table
      %thead
        %tr
          %th ID
          %th= User.human_attribute_name(:login)
          - if policy(User).edit?
            %th
      %tbody
        - @users.each do |user|
          %tr
            %td
              = user.id
            %td
              = user.login
            - if policy(user).edit?
              %td
                = link_to t('actions.edit'), edit_user_path(user)
