.row
  .col.col-6
    %p
      %b Theme:
      = @round.theme.title
    %p
      %b User:
      = @round.user.login
    %p
      %b Current answers:
      = @round.current_answers
    %p
      %b Wrong answers:
      = @round.wrong_answers
    %p
      %b Finished:
      = @round.finished
    %p
      %b Questions:
      = @round.questions_collection

    = link_to 'Back', rounds_path

  .col.col-6
    #questions
      = link_to t('actions.start'), round_path(@round, page: 1), class: 'btn', remote: true
